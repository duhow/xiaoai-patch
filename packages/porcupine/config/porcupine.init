#!/bin/sh /etc/rc.common

START=98
USE_PROCD=1

EXTRA_COMMANDS="status toggle"
CONFIG=/data/listener
PIDFILE=/var/run/listener.pid
SILENT=0

start_service() {
  # unmute led
  /bin/shut_led 7 &

  [ "$SILENT" != "1" ] && play_sound /usr/share/sound/unmute

  procd_open_instance
  procd_set_param command /usr/bin/porcupine_launcher
  procd_set_param respawn 3600 5 0
  procd_set_param pidfile ${PIDFILE}
  procd_close_instance
}

stop_service() {
  [ -f "$CONFIG" ] && . $CONFIG

  if [ -z "$MUTE_LED" ] || [ "$MUTE_LED" != "0" ]; then
    # mute led
    /bin/show_led 7 &
  fi

  # stop listening process to avoid orphan
  killall -q /usr/bin/porcupine

  [ "$SILENT" != "1" ] && play_sound /usr/share/sound/mute
}

service_triggers() {
  procd_add_reload_trigger "$CONFIG"
}

play_sound() {
  if [ -f "${1}.mp3" ]; then
    mpg123 -a notify -q "${1}.mp3" &
  elif [ -f "${1}.wav" ]; then
    aplay -Dnotify "${1}.wav" &>/dev/null &
  fi
}

reload_service() {
  SILENT=1
  stop
  sleep 1
  start
}

toggle() {
  if [ -f "${PIDFILE}" ] && [ -e /proc/`cat ${PIDFILE}`/status ]; then
    stop
  else
    start
  fi
}

status() {
  if [ -f "${PIDFILE}" ] && [ -e /proc/`cat ${PIDFILE}`/status ]; then
    echo "listener is running."
    return 0
  else
    echo "listener is stopped."
    return 1
  fi
}
