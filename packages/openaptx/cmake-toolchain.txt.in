SET(CMAKE_SYSTEM_NAME Linux)
SET(CMAKE_SYSTEM_VERSION 1)

SET(CMAKE_C_COMPILER ${BUILD_CC})
SET(CMAKE_CXX_COMPILER ${BUILD_CXX})

SET(CMAKE_C_FLAGS "${BUILD_CFLAGS}")
SET(CMAKE_CXX_FLAGS "${BUILD_CFLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS_INIT "${BUILD_LDFLAGS} -lm")
SET(CMAKE_SHARED_LINKER_FLAGS_INIT "${BUILD_LDFLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS_INIT "${BUILD_LDFLAGS}")

SET(CMAKE_FIND_ROOT_PATH ${STAGING_DIR}/${INSTALL_PREFIX})

SET(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
SET(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
SET(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
